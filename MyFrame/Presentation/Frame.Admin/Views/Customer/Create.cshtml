@model Frame.Service.Users.Model.CustomerModel
@{
    ViewBag.Title = Model.Id > 0 ? "用户编辑" : "添加用户";
    ViewBag.Nav = Model.Id > 0 ? "用户编辑" : "添加用户";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <div class="widget-body">

                        <div class="form-group col-md-12">
                            <label class="col-sm-1 control-label no-padding-right">用户名称</label>
                            <div class="col-sm-11">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="col-sm-1 control-label no-padding-right"> 邮箱</label>
                            <div class="col-sm-11">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        @if (Model.Id <= 0)
                        {
                            <div class="form-group col-md-12">
                                <label class="col-sm-1 control-label no-padding-right"> 密码</label>
                                <div class="col-sm-11">
                                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control col-md-4" })
                                    @Html.ValidationMessageFor(model => model.PassWord)
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="col-sm-1 control-label no-padding-right"> 确认密码</label>
                                <div class="col-sm-11">
                                    @Html.PasswordFor(model => model.PassWordConfirm, new { @class = "form-control col-md-4" })
                                    @Html.ValidationMessageFor(model => model.PassWordConfirm)
                                </div>
                            </div>
                        }
                        <div class="form-group  col-md-12">
                            <label class="col-sm-1 control-label no-padding-right">是否活跃</label>
                            <div class="col-sm-11">
                                @Html.CheckBoxFor(x => x.Active)
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group  col-md-12">
                                <button type="submit" class="btn btn-palegreen">保存</button>
                                <a class="btn btn-default" href="@Url.Action("List","Customer")">返回</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section footer{
    <script>
        $(function () {
            var id = '@Model.Id';
            if (id > 0) {
                $("#Email").attr("readonly", "readonly");
            }
        })
    </script>
}

