@model Frame.Service.Models.Role.RoleModel
@{
    ViewBag.Title = Model.Id > 0 ? "角色编辑" : "添加角色";
    ViewBag.Nav = Model.Id > 0 ? "角色编辑" : "添加角色";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <div class="widget-body">

                        <div class="form-group col-md-12">
                            <label class="col-sm-1 control-label no-padding-right">角色名称</label>
                            <div class="col-sm-11">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="col-sm-1 control-label no-padding-right"> 角色系统名称</label>
                            <div class="col-sm-11">
                                @Html.EditorFor(model => model.SystemName, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                                @Html.ValidationMessageFor(model => model.SystemName)
                            </div>
                        </div>

                        <div class="form-group  col-md-12">
                            <label class="col-sm-1 control-label no-padding-right">是否活跃</label>
                            <div class="col-sm-11">
                                @Html.CheckBoxFor(x=>x.Active)
                            </div>
                          
                        </div>
                        <div class="form-group  col-md-12">
                            <label class="col-sm-1 control-label no-padding-right">角色类型</label>
                            <div class="col-sm-11">
                                @Html.EnumDropDownListFor(model => model.Type, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Type)
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group  col-md-12">
                                <button type="submit" class="btn btn-palegreen">保存</button>
                                <a class="btn btn-default" href="@Url.Action("RoleList","Role")">返回</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section footer{
    <script>
        $(function () {
            $("#Type option").first().remove();
        })
    </script>
}

