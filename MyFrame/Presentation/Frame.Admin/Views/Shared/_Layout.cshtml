<html xmlns="http://www.w3.org/1999/xhtml">
<!-- Head -->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/assets/img/favicon.png" type="image/x-icon">

    @Styles.Render("~/assets/bootstrap")
    @Styles.Render("~/assets/base")
    @Styles.Render("~/assets/beyond")   
    @RenderSection("header", false)
    <style>
        .field-validation-error{
            color:red;
        }
    </style>
</head>

<body>
    @Html.Partial("_Head")
    <div class="main-container container-fluid">
        <div class="page-container">
           @Html.Action("Sidebar","Common")
            <div class="page-content">
                <div class="page-breadcrumbs">
                    <ul class="breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="#">Home</a>
                        </li>
                        <li>
                            <a href="#">UI Elements</a>
                        </li>
                        <li class="active">Buttons</li>
                    </ul>
                </div>
                <div class="page-header position-relative">
                    <div class="header-title">
                        <h1>
                         @ViewBag.Nav
                        </h1>
                    </div>
                    <!--Header Buttons-->
                    <div class="header-buttons">
                        <a class="sidebar-toggler" href="#">
                            <i class="fa fa-arrows-h"></i>
                        </a>
                        <a class="refresh" id="refresh-toggler" href="">
                            <i class="glyphicon glyphicon-refresh"></i>
                        </a>
                        <a class="fullscreen" id="fullscreen-toggler" href="#">
                            <i class="glyphicon glyphicon-fullscreen"></i>
                        </a>
                    </div>
                    <!--Header Buttons End-->
                </div>
                <div class="page-body">
                    @Html.Partial("_Notifications")
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>
</body>
</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jquery/skins")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/beyonds")
@Scripts.Render("~/bundles/jquery-validate")
@Scripts.Render("~/bundles/bootstarp-table")
@RenderSection("footer", false)

